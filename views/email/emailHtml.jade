doctype html
html
  head
  body
    include htmlstyle.html
    table(style='border-spacing: 0;border-collapse: collapse;width: 690px;text-align: center;background-color: rgb(244,67,54);margin: 0 auto;')
      tbody
        tr(style='height:40px;')
        tr
          td
            div
              img(style="max-width:80%;" src="https://transcord.app/img/white/logo.png") 
        tr(style='height:40px;')
        tr
          td
            table(style='border-collapse:collapse;background-color:rgb(68,138,255);')
              tbody
                tr(style='height:5px;')
                tr
                  td
                    table(style='background-color:#ffffff;text-align:center;width:600px;margin:0 auto;')
                      tbody
                        tr(style="height:20px")
                        tr
                          td
                            h2(style='color:#4a4a4a;text-align:center;font-size:24px;font-weight:lighter;font-family:Helvetica,Arial') Your call to !{numberCalled}
                            p(style='color:#4a4a4a;font-size:16px;text-align:center;font-family:Helvetica,Arial')
                              br 
                              | Transcription
                        tr(style="height:20px")
                        tr
                          td
                            - transcription.forEach(function(line) {
                                div(style='padding: 0px;margin: inherit;display: flex;')
                                  div
                                  div(style="background:" + (line.side === 'left' ? '#f6f6f6' : '#ff5252;color:white') + ";border-radius:5px;min-height: inherit;width:100%;margin: 8px;box-sizing: border-box;display: flex;flex-direction: column;font-size: 16px;font-weight: 400;overflow: hidden;z-index: 1;position: relative;border-radius:5px")
                                    div(style="width:100%")
                                      div(style='text-align: ' + line.side + ';padding-' + line.side + ': 20px;')
                                        h6.transcript-title(style="font-size:12px;margin: 0px;")
                                        p.transcript-text #{line.transcript}
                                        p.transcript-time(style="font-size:10px;") #{moment.utc(line.startTime*1000).format('mm:ss')}
                            - })
                    table(style='background-color:#f6f6f6;text-align:center;width:600px;margin:0 auto;')
                      tbody
                        tr
                          td(style="width:50px")
                          td(style="width:180px")
                            p(style='text-align:left;color:#666666;font-family:Helvetica,Arial;font-size:11px') Â© 2018 Transcord, LLC
                              br 
                              | 447 Broadway, 2nd Floor #299 
                              br 
                              | New York, NY 10013
                          td(style="width:150px")
                          td(style="width:170px")
                            p(style='text-align:left;color:#666666;font-family:Helvetica,Arial;font-size:11px;margin-top:0px')
                              a(href="mailto:support@transcord.app" target="_blank") support@transcord.app
                              br
                              a(href="tel:501-444-2720" target="_blank") 501-444-2720
                          td(style="width:50px")
                        tr(style="height:25px")
        tr(style='height:40px')