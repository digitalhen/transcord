doctype html
html
  head
  body
    include htmlstyle.html
    table(style='border-spacing: 0;border-collapse: collapse;width: 690px;text-align: center;background-color: rgb(244,67,54);margin: 0 auto;')
      tbody
        tr(style='height:40px;')
        tr
          td
            div
              img(src="https://transcord.app/img/white/logo.png")
        tr(style='height:40px;')
        tr
          td
            table(style='border-collapse:collapse;background-color:rgb(68,138,255);margin:0 auto;')
              tbody
                tr(style='height:5px;')
                tr
                  td
                    table(style='background-color:#ffffff;text-align:center;width:600px;margin:0 auto;')
                      tbody
                        tr(style="height:20px")
                        tr
                          td
                            h2(style='color:#4a4a4a;text-align:center;font-size:24px;font-weight:lighter;font-family:Helvetica,Arial') Your call to !{numberCalled}
                            p
                              br 
                              | Transcription
                        tr(style="height:20px")
                        tr
                          td
                            - transcription.forEach(function(line) {
                                div.mdl-grid.table-grid.transcript-grid
                                  div(class=(line.side === 'right' ? 'mdl-layout-spacer' : '' ))
                                  div.mdl-card.mdl-shadow--2dp.mdl-cell.mdl-cell--10-col(class=line.side style="border-radius:5px")
                                    div.mdl-card__supporting-text
                                      div.messageContainer.dimmed(time=line.startTime)
                                        h6.transcript-title(style="font-size:12px") #{line.side === "left" ? Caller : Recipient}
                                        p.transcript-text #{line.transcript}
                                        p.transcript-time #{moment.utc(line.startTime*1000).format('mm:ss')}
                            - })
                    table(style='background-color:#f6f6f6;text-align:center;width:600px;margin:0 auto;')
                      tbody
                        tr
                          td(style="width:40px")
                          td(style="width:160px")
                            p(style='text-align:left;color:#666666;font-family:Helvetica,Arial;font-size:11px') Address will go here
                              br 
                              | Second line here
                              br 
                              | Third line here
                        tr(style="height:25px")
        tr(style='height:55px')