extends layout

block content
                    table(style='background-color:#ffffff;text-align:center;width:100%;margin:0 auto;')
                      tbody
                        tr(style="height:20px")
                        tr
                          td(style="padding: 0px 15px")
                            h2(style='color:#4a4a4a;text-align:center;font-size:24px;font-weight:lighter;font-family:Roboto, RobotoDraft, Helvetica, Arial, sans-serif') Thank you for purchasing a new incoming number.
                            p(style='color:#4a4a4a;font-size:16px;text-align:center;font-family:Roboto, RobotoDraft, Helvetica, Arial, sans-serif') Your payment of $!{(payment.amount/100).toFixed(2)} was successfully completed. Your balance is now $!{(user.balance/100).toFixed(2)}.
                            p(style='color:#4a4a4a;font-size:16px;text-align:center;font-family:Roboto, RobotoDraft, Helvetica, Arial, sans-serif') The incoming number for your account is: !{number.friendlyName}
                        tr(style="height:20px")

                      
                    