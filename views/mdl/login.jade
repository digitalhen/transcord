block variables
  title Log in - Transcord

extends layout

block content
  div.mdl-grid
    div.mdl-layout-spacer
    div.mdl-card.mdl-shadow--16dp.mdl-cell.mdl-cell--4-col
      div.mdl-card__title.mdl-color--orange-800
        h2.mdl-card__title-text.mdl-color-text--white User login
      div.mdl-card__supporting-text.mdl-grid
        b.mdl-color-text--acent Error message goes here

        form(method='post' action='/login')
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.is-upgraded
            label.mdl-textfield__label.mdl-color-text--grey(for='textfield_username') Username
            input#textfield_username.mdl-textfield__input(type='text' name='username')

          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.is-upgraded
            label.mdl-textfield__label.mdl-color-text--grey(for='textfield_password') Password
            input#textfield_username.mdl-textfield__input(type='password' name='password')

          div.mdl-cell.mdl-cell--12-col.send-button
            button.mdl-button.mdl-js-ripple-effect.mdl-js-button.mdl-button--raised.mdl-button--colored.mdl-color--primary(type='submit') Log In

    div.mdl-layout-spacer
