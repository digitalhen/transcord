block variables
  title Login - Transcord

extends layout

block content
  main.mdl-layout__content.bg.bg-login
    div.login-wrapper
      div.mdl-grid
        div.mdl-cell.mdl-cell--6-col
          div.mdl-card.mdl-shadow--6dp
            div.mdl-card__title.mdl-color--primary.mdl-color-text--white
              h2.mdl-card__title-text User login
            div.mdl-card__supporting-text.mdl-grid

              form#form-login(method='post' action='/login')
                div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.is-upgraded
                  label.mdl-textfield__label.mdl-color-text--grey(for='username') Username
                  input#username.mdl-textfield__input(type='text' name='username')
                  span.error.mdl-textfield__error(for="username") Error message goes heres

                div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.is-upgraded
                  label.mdl-textfield__label.mdl-color-text--grey(for='password') Password
                  input#password.mdl-textfield__input(type='password' name='password')
                  span.error.mdl-textfield__error(for="password") Error message goes heres

                input#submit-form(type='submit' class='hidden')

            div.mdl-card__actions.mdl-card--border
              div.mdl-grid
                button#form-login-button.mdl-cell.mdl-cell--12-col.mdl-button.mdl-button--raised.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect.mdl-color-text--white(for='submit-form') Sign in
              div.mdl-grid
                div.mdl-cell.mdl-cell--12-col
                  a.mdl-color-text--primary(href='/register') Sign up!
                  a.mdl-color-text--primary(style='float:right') Lost Password?

block js
  script(src="/js/validation.js")
