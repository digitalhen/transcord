extends layout

block content
  .container
    form.form-signin(role='form', action="/profile",method="post", style='max-width: 300px;')
      h2.form-signin-heading Profile
      input.form-control(type='text', name="name", value=user.name) 
      input.form-control(type='text', name="username", value=user.username)
      input.form-control(type='password', name="password", placeholder='Enter new password')
      input.form-control(type='text', name="email", value=user.email)
      input.form-control(type='text', name="phoneNumber", value=user.phoneNumber)
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Update
